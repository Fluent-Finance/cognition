{
  "compilerOptions": {
    "types": [
      "./src/lib/types.d/deno.d.ts"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.window", 
      "deno.worker",
      "deno.unstable"
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declarationDir": "./src/lib/types.d"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "lock": false,
  "nodeModulesDir": true,
  "test": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "tasks": {
    "svr": "op run -- deno run -A --unstable build/mod.ts"
    "bun": "deno run --allow-all --unstable --node-modules-dir npm:npx bun go"
  },
  "imports": {
    "oak": "https://deno.land/x/oak@v12.4.0/mod.ts",
    "caniuse-lite": "https://jspm.dev/npm:caniuse-lite@1"
  }
}
